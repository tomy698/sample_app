<tr>
    <td class="micropost">
        <span class="content">
            <%= micropost.content %>
        </span>
        <span class="timestamp">
            <%= time_ago_in_words(micropost.created_at) %>.
        </span>
        <% user = micropost.user rescue User.find(micropost.user_id) %>
        <% if current_user.admin? %>
            <td>
            <%= link_to deleteIcon, micropost, :method => :delete, :remote => true, :confirm => I18n.t("text.confirm") %>
            </td>
        <% end %>
    </td>
</tr>