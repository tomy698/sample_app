<tr>
    <td class="gravatar">
        <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    </td>
    <td class="micropost">
        <span class="user">
            <%= link_to feed_item.user.nom, feed_item.user %>
        </span>
        <span class="content">
            <%= feed_item.content %>
        </span>
        <span class="timestamp">
            <%= time_ago_in_words(feed_item.created_at) %>.
        </span>
    </td>
    <td>
        <% if current_user?(feed_item.user) || current_user.admin? %>
            <%= link_to deleteIcon, feed_item, :confirm => I18n.t("text.confirm"), :method => :delete %>
        <% end %>
    </td>
</tr>