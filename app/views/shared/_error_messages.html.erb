<% if object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(object.errors.count, I18n.t("text.error")) %>
        <%= I18n.t("error.errormessage1") %> <%= object.class.to_s.underscore.humanize.downcase %>
        <%= I18n.t("error.errormessage2") %>:</h2>
      <p><%= I18n.t("error.errormessage3") %>:</p>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>